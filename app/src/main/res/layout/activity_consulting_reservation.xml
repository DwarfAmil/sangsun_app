<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ConsultingActivity_Reservation">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ACACE5"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="상담사 예약"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textColor="#201F1F"
                android:fontFamily="@font/suseongdotum"/>

    </androidx.appcompat.widget.Toolbar>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName" android:hint="이름" android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp" android:layout_marginRight="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2" android:hint="상담 사유" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="10dp"/>
    <Button
            android:text="상담 채팅"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/chatting_btn" android:layout_gravity="center"
            android:textSize="20sp" android:fontFamily="@font/gmarketmedium"
            android:background="@drawable/btn_white_back" android:layout_marginTop="20dp"/>
</LinearLayout>